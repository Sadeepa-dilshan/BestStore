@model BestStore.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <!-- Display existing image if available -->
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="form-group">
            <label>Current Image</label>
            <div>
                <img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 150px;" />
            </div>
        </div>
    }

    <!-- File upload for new image -->
    <div class="form-group">
        <label for="Image">New Product Image (Optional)</label>
        <input type="file" name="Image" class="form-control" />
    </div>

    <!-- Hidden field for ImagePath in case no new image is uploaded -->
    <input type="hidden" asp-for="ImagePath" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>